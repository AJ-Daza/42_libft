# Nombre de la libreria
NAME = libft.a

# Compilador y flags
CC = gcc
CFLAGS = -Wall -Wextra -Werror

# Archivos fuente y objeto
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)

# Archivo de encabezado
INCLUDE = libft.h

# Crear biblioteca y eliminar archivos
AR = ar rcs
RM = rm -f

# objetivo: dependencias
# 	comando

# Regla por defecto que ocmpila todo
all: $(NAME)

# Regla para crear la biblioteca
$(NAME): $(OBJ)
	$(AR) $@ $^
 
# Pasar archivos ".c" a ".o"
%.o: %.c $(INCLUDE)
	S(CC) S(CFLAGS) -c -o $@ $<
 
# Regla para eliminar los archivos objeto
clean:
	$(RM) $(OBJ)
 
# Eliminar archivos ".o" y ".a"
fclean: clean
	$(RM) $(NAME)
 
# Recompilar todo desde cero
re: fclean all
 
# Indica que las siguientes reglas no son archivos reales
.PHONY: all clean fclean re
